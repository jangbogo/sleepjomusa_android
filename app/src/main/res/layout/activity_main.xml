<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mainBackground"
        android:layout_width="348dp"
        android:layout_height="182dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/round_background"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_background" />

    <ImageView
        android:id="@+id/iconEmote"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginEnd="144dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="118dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainBackground"
        app:srcCompat="@drawable/icon_happy" />

    <TextView
        android:id="@+id/textEmote"
        android:layout_width="348dp"
        android:layout_height="28dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="블루투스 연결중입니다"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconEmote" />

    <ImageView
        android:id="@+id/iconThermometer"
        android:layout_width="25dp"
        android:layout_height="54dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="21dp"
        android:translationY="-180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainBackground"
        app:srcCompat="@drawable/icon_thermo_30" />

    <ImageView
        android:id="@+id/iconThermometer2"
        android:layout_width="31dp"
        android:layout_height="54dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="21dp"
        android:translationY="-100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainBackground"
        app:srcCompat="@drawable/icon_thermo_30" />

    <TextView
        android:id="@+id/descThermo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="213dp"
        android:layout_marginTop="27dp"
        android:translationY="-180dp"
        android:text="기온"
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainBackground" />

    <TextView
        android:id="@+id/descThermo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="142dp"
        android:layout_marginTop="140dp"
        android:text="습도"
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textThermo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="27dp"
        android:translationY="-180dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/descThermo"
        app:layout_constraintTop_toBottomOf="@+id/mainBackground" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="℃"
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:translationY="-180dp"
        app:layout_constraintStart_toEndOf="@+id/textThermo"
        app:layout_constraintTop_toBottomOf="@+id/mainBackground" />

    <TextView
        android:id="@+id/textThermo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="29dp"
        android:translationY="-106dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/descThermo2"
        app:layout_constraintTop_toBottomOf="@+id/mainBackground" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="%"
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:translationY="-106dp"
        app:layout_constraintStart_toEndOf="@+id/textThermo"
        app:layout_constraintTop_toBottomOf="@+id/mainBackground" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="652dp"
        app:itemBackground="@color/white"
        app:itemIconTint="@xml/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@xml/menu" />

</android.support.constraint.ConstraintLayout>